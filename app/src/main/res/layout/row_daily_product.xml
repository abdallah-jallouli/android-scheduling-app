<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:background="@drawable/static_rv_bg"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="10dp"
    android:elevation="5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        android:layout_marginEnd="20dp">

        <ImageView
            android:id="@+id/dailyProductImageView"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image"
            android:layout_gravity="center"
            android:contentDescription="Daily Product Image" />

    </androidx.cardview.widget.CardView>/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <TextView
            android:id="@+id/dailyProductNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="Daily Product Name" />

        <TextView
            android:id="@+id/numberOfCooksTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="Number of Cooks: 0" />

        <TextView
            android:id="@+id/responsibleTeamTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responsible Team: Team Name"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:text="Weight: 0.0 lbs" />

    </LinearLayout>

</LinearLayout>
